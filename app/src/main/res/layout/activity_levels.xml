<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.myapplication.viewModel.GameViewModel"/>
        <import type="com.example.myapplication.models.CardEnum"/>
        <import type="com.example.myapplication.R"/>
        <variable
            name="gameViewModel"
            type="com.example.myapplication.viewModel.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Levels"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/l4"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra4, 4)}"
            app:imageResource="@{gameViewModel.lletra4 != null ? gameViewModel.faceUpCardLletra4 ? CardEnum.getCardResource(gameViewModel.lletra4) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.728" />

        <ImageView
            android:id="@+id/l3"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra3, 3)}"
            app:imageResource="@{gameViewModel.lletra3 != null ? gameViewModel.faceUpCardLletra3 ? CardEnum.getCardResource(gameViewModel.lletra3) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.728" />

        <ImageView
            android:id="@+id/l8"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra8, 8)}"
            app:imageResource="@{gameViewModel.lletra8 != null ? gameViewModel.faceUpCardLletra8 ? CardEnum.getCardResource(gameViewModel.lletra8) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.936" />

        <ImageView
            android:id="@+id/l5"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra5, 5)}"
            app:imageResource="@{gameViewModel.lletra5 != null ? gameViewModel.faceUpCardLletra5 ? CardEnum.getCardResource(gameViewModel.lletra5) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.936" />

        <ImageView
            android:id="@+id/l1"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra1, 1)}"
            app:imageResource="@{gameViewModel.lletra1 != null ? gameViewModel.faceUpCardLletra1 ? CardEnum.getCardResource(gameViewModel.lletra1) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.728" />

        <ImageView
            android:id="@+id/l2"
            android:layout_width="71dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra2, 2)}"
            app:imageResource="@{gameViewModel.lletra2 != null ? gameViewModel.faceUpCardLletra2 ? CardEnum.getCardResource(gameViewModel.lletra2) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.728" />

        <ImageView
            android:id="@+id/l7"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra7, 7)}"
            app:imageResource="@{gameViewModel.lletra7 != null ? gameViewModel.faceUpCardLletra7 ? CardEnum.getCardResource(gameViewModel.lletra7) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.936" />

        <ImageView
            android:id="@+id/l6"
            android:layout_width="72dp"
            android:layout_height="119dp"
            android:onClick="@{() -> gameViewModel.onClickedAtCard(gameViewModel.lletra6, 6)}"
            app:imageResource="@{gameViewModel.lletra6 != null ? gameViewModel.faceUpCardLletra6 ? CardEnum.getCardResource(gameViewModel.lletra6) : R.drawable.dorso  : R.drawable.x}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.362"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgParaula"
            app:layout_constraintVertical_bias="0.925" />

        <TextView
            android:id="@+id/paraulaEscrita"
            android:layout_width="313dp"
            android:layout_height="61dp"
            android:hint="escriure paraula..."
            android:text='@{gameViewModel.currentWordMutableLiveData ?? ""}'
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgParaula"
            app:layout_constraintVertical_bias="0.429" />

        <TextView
            android:id="@+id/ratlles"
            android:layout_width="240dp"
            android:layout_height="86dp"
            android:text='@{ gameViewModel.levelMutableLiveData.maskSolution ?? "_   _   _   _   _"}'
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.524" />

        <ImageView
            android:id="@+id/imgParaula"
            android:layout_width="154dp"
            android:layout_height="171dp"
            app:imageUrl='@{gameViewModel.levelMutableLiveData != null ? gameViewModel.levelMutableLiveData.imageUrl : "https://s3-alpha.figma.com/hub/file/948140848/1f4d8ea7-e9d9-48b7-b70c-819482fb10fb-cover.png"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.158" />

        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@={gameViewModel.username}'
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/xp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@={gameViewModel.xp}'
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.591"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.187"
            app:srcCompat="@drawable/pause" />

        <TextView
            android:id="@+id/contador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@={gameViewModel.contador}'
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/xp_tv"
            app:layout_constraintHorizontal_bias="0.802"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XP"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.674"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/tvTempsContrareloj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={gameViewModel.tempsContrarellotge}"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="304dp"
            android:layout_height="263dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074"
            app:srcCompat="@drawable/marco" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temps restant:"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>